server:
    interface: 127.0.0.1
    interface: {{ hostvars[groups['ambari-node'][0]][['ansible_', hostvars[groups['ambari-node'][0]]['cluster_interface']]|join]['ipv4']['address'] }}
    access-control: 127.0.0.0/8 allow
    access-control: 10.0.0.0/8 allow
    {% for node in groups['hadoop-cluster'] %}
    access-control: {{ hostvars[node]['ansible_'~hostvars[node].cluster_interface|default(hostvars[node].ansible_default_ipv4.alias)]['ipv4']['address'] }}/32 allow
    {% endfor %}
    domain-insecure: "{{ ansible_domain }}"
    local-zone: "10.in-addr.arpa." nodefault

stub-zone:
    name: "10.in-addr.arpa."
    stub-addr: {{ hostvars[groups['ambari-node'][0]][['ansible_', hostvars[groups['ambari-node'][0]]['cluster_interface']]|join]['ipv4']['address'] }}

forward-zone:
    name: "."
    forward-addr: {{ dnsfwd[0] }}
    forward-addr: {{ dnsfwd[1] }}

remote-control:
    control-interface: 127.0.0.1